{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,      // Allows JavaScript files
    "checkJs": false,     // Prevents TypeScript from type-checking JS
    "outDir": "dist",     // Compiles TS to JS in the "dist" folder
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
